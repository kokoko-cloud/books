<h1>Posts#new</h1>
<p>Find me in app/views/pages/index.html.erb</p>

<div class="post-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Picture</h1>
        <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image%>
          </div>

          <div class="form-group">
            <%= f.label :post %>
            <%= f.text_area :post, class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="post-index-wrapper">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="post-index-single">
            <h2 class="post-author">
              <%= post.user.name %>
            </h2>
            <%= image_tag post.image.url %>
            <%= image_tag 'icons/heart-black.png', class: 'post-index-icon' %>
            <%= image_tag 'icons/comment.png', class: 'post-index-icon' %>
            <p class="post-text">
              <%= post.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>